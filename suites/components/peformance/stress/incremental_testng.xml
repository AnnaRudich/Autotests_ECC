<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Incremental_stress" configfailurepolicy="continue" data-provider-thread-count="1000">
    <test verbose="1" name="Performance Test" enabled="true" preserve-order="true">
        <classes>
            <class name="com.scalepoint.automation.tests.performance.PerformanceTest" />
        </classes>
    </test>
    <listeners>
        <listener class-name="com.scalepoint.automation.utils.testng.ConstantSuiteListener"/>
        <listener class-name="com.scalepoint.automation.utils.testng.IncrementalSuiteListener"/>
        <listener class-name="com.scalepoint.automation.utils.testng.StressSuiteListener"/>
    </listeners>
</suite>