<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="allTestsExceptRnV" configfailurepolicy="continue" parallel="methods">

    <test verbose="1" name="allTestsExceptApiAndRnV" group-by-instances="false" enabled="true" preserve-order="true" thread-count="7">
        <packages>
            <package name=".*">
                <exclude name="com.scalepoint.automation.tests.rnv1"/>
                <exclude name="com.scalepoint.automation.tests.api"/>
            </package>
        </packages>
    </test>

    <test verbose="1" name="api" enabled="true" preserve-order="true" thread-count="1">
        <packages>
            <package name="com.scalepoint.automation.tests.api"/>
        </packages>
    </test>

    <listeners>
        <listener class-name="com.scalepoint.automation.utils.testng.RetryListener"/>
    </listeners>

</suite>
